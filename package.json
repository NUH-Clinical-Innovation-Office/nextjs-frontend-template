{
  "name": "nextjs-frontend-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check",
    "format": "biome check --write",
    "type-check": "tsc --noEmit",
    "depcheck": "depcheck",
    "analyze": "ANALYZE=true next build --webpack",
    "security-scan": "echo '=== Running Trivy Security Scans ===' && echo '\n[1/3] Scanning dependencies and configurations...' && trivy fs . --severity CRITICAL,HIGH --scanners vuln,misconfig --skip-dirs docs && echo '\n[2/3] Scanning Dockerfile...' && trivy config Dockerfile --severity CRITICAL,HIGH && echo '\n[3/3] Scanning Helm charts...' && trivy config helm/ --severity CRITICAL,HIGH && echo '\nâœ“ Security scan complete!'",
    "security-scan:image": "echo 'Building and scanning Docker image...' && IMAGE_TAG=$(git rev-parse --short HEAD) && docker build -t nextjs-frontend-template:$IMAGE_TAG . && trivy image nextjs-frontend-template:$IMAGE_TAG --severity CRITICAL,HIGH",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next": "^16.0.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "depcheck": "^1.4.7",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
